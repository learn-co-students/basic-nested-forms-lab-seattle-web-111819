<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br/>

    <%= f.fields_for :ingredients do |ing_f| %>
    <%= ing_f.label :name %> 
    <%= ing_f.text_field :name %><br/> 

    <%= ing_f.label :quantity %>
    <%= ing_f.number_field :quantity %><br/>
  <% end %>
  <%= f.submit %> 
<% end %> 
