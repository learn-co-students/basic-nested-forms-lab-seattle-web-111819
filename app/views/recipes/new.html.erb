<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.fields_for :ingredients do |g| %>
        <%= g.label :name %>
        <%= g.text_field :name %><br>
        <%= g.label :quantity %>
        <%= g.text_field :quantity %><br>
    <% end %>
    <%= f.submit %>
<% end %>